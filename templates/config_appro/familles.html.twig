{% extends 'base.html.twig' %}

{% block title %}
	<h1 class='col-10'>Familles</h1>
	<a href="{{path('config_index')}}">
		<i class="fas fa-backward fa-2x"></i>
	</a>
{% endblock %}

{% block body %}
	<div class="container">
		<div class="cadre menu mt-5">
			<a href='{{path('config_fournisseurs')}}' type='button' class="btn btn-sm btn-success">
				<i class="fas fa-id-card"></i>
				Fournisseur/Contact
			</a>
			<a href='{{path('config_familles')}}' type='button' class='btn btn-sm btn-success'>
				<i class="fas fa-tags"></i>
				Famille
			</a>
			<a href="{{path('config_nuances')}}" type='button' class='btn btn-sm btn-success'>
				<i class="fas fa-tags"></i>
				Nuance
			</a>
			<a href='#' type='button' class='btn btn-sm btn-warning'>
				<i class="fas fa-history"></i>
				Autre
			</a>
		</div>
		<div class="liste cadre-2 scroll-y">
			{% if liste %}
				<table class="table table-striped table-sm">
					<thead class="table-dark">
						<tr>
							<th scope="col">Code</th>
							<th scope="col">Nom</th>
							<th scope="col">Statut</th>
						</tr>
					</thead>
					<tbody>
						{% for line in liste %}
							<tr>
								<th scope="row">{{line.codefamille}}</th>
								<td>{{line.nomfamille}}</td>
								<td>
									<div class="custom-control custom-switch">
										<input type="checkbox" class="custom-control-input switch-tab" id="Switchfamille{{line.id}}"
											data-id="{{line.id}}"
											data-url="statutfamille"
											{% if line.statutfamille =="OK" %} checked {% endif %}>
										<label class="custom-control-label" for="Switchfamille{{line.id}}"></label>
									</div>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			{% endif %}
		</div>
	</div>
{% endblock %}

{% block script %}
	<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
	<script src="{{asset('js/appro.js')}}"></script>
{% endblock %}
