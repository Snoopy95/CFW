{% extends 'base.html.twig' %}

{% block title %}
		<h1>Nuances</h1>
{% endblock %}

{% block body %}
	<div class="container">
		<div class="cadre menu mt-5 d-flex justify-content-between">
			<div>
				<a href="{{path('config_index')}}" type='button' class='btn btn-sm btn-primary'>
					<i class="fas fa-arrow-alt-circle-left"></i>
					Retour
				</a>
				<a href='{{path('config_fournisseurs')}}' type='button' class="btn btn-sm btn-success">
					<i class="fas fa-id-card"></i>
					Fournisseur/Contact
				</a>
				<a href='{{path('config_familles')}}' type='button' class='btn btn-sm btn-success'>
					<i class="fas fa-tags"></i>
					Famille
				</a>
				<a href="{{path('config_nuances')}}" type='button' class='btn btn-sm btn-success'>
					<i class="fas fa-tags"></i>
					Nuance
				</a>
				<a href='#' type='button' class='btn btn-sm btn-warning'>
					<i class="fas fa-history"></i>
					Autre
				</a>
			</div>
		</div>
		<div class="liste cadre-2 scroll-y">
			{% if liste %}
				<table class="table table-striped table-sm">
					<thead class="table-dark">
						<tr>
							<th scope="col">Code</th>
							<th scope="col">Nom</th>
							<th scope="col">Statut</th>
						</tr>
					</thead>
					<tbody>
						{% for line in liste %}
							<tr>
								<th scope="row">{{line.codenuance}}</th>
								<td>{{line.name}}</td>
								<td>
									<div class="form-check form-switch">
										<input type="checkbox" class="form-check-input switch-tab" id="Switchfamille{{line.id}}" data-id="{{line.id}}" data-url="statutnuance" {% if line.statutnuance =="OK" %} checked {% endif %}>
										<label class="form-check-label" for="Switchfamille{{line.id}}"></label>
									</div>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			{% endif %}
		</div>

	</div>
{% endblock %}

{% block script %}
	<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
	<script src="{{asset('js/appro.js')}}"></script>
{% endblock %}
