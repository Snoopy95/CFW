<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
            <h5 id='titreformulaire' class="modal-title">Nouveau contact</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="input-group flex-nowrap">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="fas fa-user"></i>
                    </span>
                </div>
                <input type="text" class="form-control" placeholder="Nom & Prenom" id="username" />
            </div>
            <small id="feedback-name" class="error invisible">Nom invalide !!!</small>
            <div class="input-group flex-nowrap mt-1">
                <div class="input-group-prepend">
                    <span class="input-group-text">
                        <i class="far fa-envelope"></i>
                    </span>
                </div>
                <input type="email" class="form-control" placeholder="Email" id="mail"/>
            </div>
            <small id="feedback-email" class="error invisible">Adresse mail invalide !!!</small>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">
                Annuler
            </button>
            <button type="button" id="validercontact" class="btn btn-primary">
                Ajouter
            </button>
        </div>
    </div>
</div>