{% extends 'base.html.twig' %}

{% block title %}
	<h1 class='col-10'>Appro Matiere</h1>
	<a href="{{path('acceuil')}}">
		<i class="fas fa-home fa-2x"></i>
	</a>
{% endblock %}

{% block body %}
	<div class="">
		<div class="cadre menu mt-5">
			<a href=" {{path('appro_recupdebit')}}" type='button' class="btn btn-sm btn-secondary">
				<i class="fas fa-download"></i>
				Import débit
			</a>
			<a href="{{path('appro_adddebit')}}" type='button' class='btn btn-sm btn-success'>
				<i class="fas fa-plus-square"></i>
				Ajout débit
			</a>
			<a href="{{path('appro_appromail')}}" type='button' class='btn btn-sm btn-success'>
				<i class="fas fa-envelope"></i>
				Générer mail
			</a>
			<a href="{{path('appro_suivimail')}}" type='button' class='btn btn-sm btn-primary'>
				<i class="fas fa-clipboard-check"></i>
				Suivi mail
			</a>
			<a href='#' type='button' class='btn btn-sm btn-warning'>
				<i class="fas fa-history"></i>
				Historique mail
			</a>
			<a href='{{ path('config_index') }}' type='button' class='btn btn-sm btn-secondary float-right '>
				<i class="fas fa-tools"></i>
				Configuration
			</a>
		</div>
		<!-- ***** tableau **** -->
		<div class="liste cadre">
			<table class="table table-striped table-sm">
				<thead class="thead-dark">
					<tr>
						<th></th>
						<th scope="col">Client</th>
						<th scope="col">Matiere</th>
						<th scope="col">Debit</th>
						<th scope="col">Epais.</th>
						<th scope="col">Quantité</th>
						<th scope="col">Famille</th>
						<th scope="col">Nuance</th>
						<th scope="col">NAF</th>
						<th scope="col">Actions</th>
					</tr>
				</thead>
				<tbody>
					{% if lignes %}
					{% for ligne in lignes %}
						<tr>
							<td scope="row">
								<input class="switch-tab" type="checkbox" id="lig{{ligne.id}}" data-id="{{ligne.id}}" data-url="statutdebit"
								{% if ligne.statut == "sending" %} checked {% endif %}>
							</td>
							<td>{{ ligne.client }}</td>
							<td>{{ ligne.matiere }}</td>
							<td>{{ ligne.debit }}</td>
							<td>{{ ligne.epaisseur }}</td>
							<td>{{ ligne.quantite }}</td>
							<td> {% if ligne.famille %}
									{{ ligne.famille.nomfamille }}
									{% else %}
									Inconnue
								{% endif %}
							</td>
							<td>{% if ligne.nuance %}
									{{ ligne.nuance.name}}
									{% else %}
									Inconnue
								{% endif %}
							</tb>
							<td>{{ ligne.naf }}</td>
							<td>
								<a href="{{ path('appro_updebit', {'id': ligne.id}) }}" class="btn btn-sm">
									<i class="fas fa-pencil-alt fa-lg fontcolor"></i>
								</a>
								/
								<a href="#" class="btn btn-sm" data-toggle="modal" data-target="#del{{ligne.id}}">
									<i class="fas fa-trash-alt fa-lg fontcolor"></i>
								</a>
							</td>
						</tr>
						<!-- **** Modal suppression ligne **** -->
						<div class="modal fade" id="del{{ligne.id}}" tabindex="-1" aria-labelledby="del" aria-hidden="true">
							<div class="modal-dialog">
								<div class="modal-content">
									<div class="modal-body">
										<h6>Suppression !!!</h6>
										<h6>Etes-vous sûr de vouloir supprimer la ligne</h6>
									</div>
									<div class="modal-footer">
										<button type="button" class="btn btn-success btn-sm" data-dismiss="modal">
											Annuler</button>
										<a href="{{ path('appro_deldebit', {'id' : ligne.id}) }}" type="button" class="btn btn-danger btn-sm">
											Supprimer !!</a>
									</div>
								</div>
							</div>
						</div>
					{% endfor %}
					{% endif %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}

{% block script %}
	<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
	<script src="{{asset('js/appro.js')}}"></script>
{% endblock %}
