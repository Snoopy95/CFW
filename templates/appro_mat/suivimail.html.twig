{% extends 'base.html.twig' %}

{% block title %}
	<h1 class='col-10'>Suivi</h1>
	<a href="{{path('appro_index')}}">
		<i class="fas fa-backward fa-2x"></i>
	</a>
{% endblock %}

{% block body %}
	<div class="">
		<div class="cadre menu mt-5">
			<a href="{{path('appro_index')}}" type='button' class='btn btn-sm btn-primary'>
				<i class="fas fa-arrow-alt-circle-left"></i>
				Retour
			</a>
		</div>
		<!-- ***** tableau **** -->
		<div class="liste cadre">
			<table class="table table-striped table-sm">
				<thead class="thead-dark">
					<tr>
						<th scope="col">Date d'envoie</th>
						<th scope="col">Matiere</th>
						<th scope="col">Client</th>
						<th scope="col">NAF</th>
						<th scope="col">Actions</th>
					</tr>
				</thead>
				<tbody>
					{% if lignes %}
					{% for ligne in lignes %}
						<tr>
							<td scope="row">
								{{ ligne.dateupdate|date('d/m/Y') }}
							</td>
							<td>{{ ligne.matiere }}</td>
							<td>{{ ligne.client }}</td>
							<td>{{ ligne.naf }}</td>
							<td>
								{% if ligne.statut == "send" %}
								{% set statut = 1 %}
								{% elseif ligne.statut == "receive" %}
								{% set statut = 2 %}
								{% elseif ligne.statut == "order" %}
								{% set statut = 3 %}
								{% endif %}
									<a href="#" class="btn btn-sm" title="Mail envoyé">
									<span class='p-2 badge badge-pill 
										{% if statut == 1 %}
											badge-primary
										{% elseif statut > 1 %}
											badge-success
										{% else %}
											badge-info
										{% endif %}'>
										<i class="fas fa-paper-plane fa-2x"></i>
									</span> 
								</a>
								<a href="#" class="btn btn-sm" title="Offre reçue" data-target="">
									<span class='p-2 badge badge-pill 
										{% if statut == 2 %}
											badge-primary
										{% elseif statut > 2 %}
											badge-success
										{% else %}
											badge-info
										{% endif %}'>
										<i class="fas fa-file-invoice-dollar fa-2x"></i>
									</span>
								</a>
								<a href="#" class="btn btn-sm" title="Commande passé" data-target="">
									<span class='p-2 badge badge-pill 
										{% if statut == 3 %}
											badge-primary
										{% elseif statut > 3 %}
											badge-success
										{% else %}
											badge-info
										{% endif %}'>
										<i class="fas fa-shipping-fast fa-2x"></i>
									</span>
								</a>
								<a href="#" class="btn btn-sm" title="Commande reçue" data-target="">
									<span class='p-2 badge badge-pill badge-info'>
										<i class="fas fa-flag-checkered fa-2x"></i>
									</span>
								</a>
							</td>
						</tr>
					{% endfor %}
					{% endif %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}

{% block script %}
	<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
	<script src="{{asset('js/appro.js')}}"></script>
{% endblock %}
