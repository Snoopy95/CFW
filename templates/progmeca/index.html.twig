{% extends 'base.html.twig' %}

{% block title %}
	<h1>Prog Mécanique</h1>
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="cadre menu mt-5">
			<div class="align-items-center d-flex">
				<div class="dropdown">
					<a class="ms-1 btn btn-sm btn-primary dropdown-toggle" href="#" role="button" id="dropdownlist" data-bs-toggle="dropdown" aria-expanded="false">
						<i class="fas fa-list-ol"></i>
						Liste des Prg
					</a>
					<ul class="dropdown-menu" aria-labelledby="dropdownlist">
						<li>
							<a class="dropdown-item" href="#">Fraisage</a>
						</li>
						<li>
							<a class="dropdown-item" href="#">Tournage</a>
						</li>
						<li><hr class="dropdown-divider"></li>
						<li>
							<a class="dropdown-item" href="#">Tous Prg</a>
						</li>
					</ul>
				</div>
				<a href="#" type='button' class='ms-1 btn btn-sm btn-primary'>
					<i class="fas fa-search"></i>
					Rechercher PRG
				</a>
				<a href='#' type='button' class='ms-1 btn btn-sm btn-warning'>
					<i class="fas fa-history"></i>
					Autre
				</a>
			</div>
			<div class="card mt-3">
				<div class='card-body'>
					<div class="d-flex justify-content-around">
						<div class="m-2">
							<div class='row g-3'>
								<div class="col-12">
									<div class="form-floating">
										<input type="number" min="0" class="form-control" id="inputDossier" placeholder="numdossier">
										<label for="inputDossier">Numero de dossier</label>
									</div>
								</div>
								<div class="col-12">
									<button type='submit' id='checkDossier' class='btn btn-success'>Recherche</button>
								</div>
								<div id="liveAlertPlaceholder"></div>
							</div>
						</div>
						<div class="m-2">
						{{ form_start(form) }}
							<div class="row">
								<div class="col-6">
									<div class="form-floating">
										{{form_widget(form.client)}}
										<label for="inputClient">Client</label>
									</div>
								</div>
								<div class='row g-3'>
									<div class='col-10'>
										<div class="form-floating">
											{{ form_widget(form.refpiece)}}
											<label for="inputRef">Référence piéce</label>
										</div>
									</div>
									<div class="col-2">
										<div class="form-floating">
											{{ form_widget(form.ind)}}
											<label for="inputInd">Indice</label>
										</div>
									</div>
								</div>
								<div class="row g-3">
									<div class="col-12">
										<div class="form-floating">
											{{ form_widget(form.desigpiece) }}
											<label for="inputDesign">Désignation piéce</label>
										</div>
									</div>
								</div>
								<div class="row g-3 ms-auto">
									<div class="col-3">
										<div class="form-check">
											{{ form_widget(form.typemachine) }}
											{# <label class="form-check-label" for="Radiofraisage">
												Fraisage
											</label> #}
										</div>
									</div>
									<div class="col-8">
										<div class="input-group">
											<input type="file" class="form-control" id="inputPlan" placeholder="Plan">
											<label for="inputPlan" class="input-group-text label">Plan</label>
										</div>
									</div>
									<div class="col-3">
										<div class="form-check">
											{# {{ form_widget(form.typemachine)}} #}
											{# <label class="form-check-label" for="Radiotournage">
												Tournage
											</label> #}
										</div>
									</div>
									<div class="col-8">
										<div class="input-group">
											<input type="file" class="form-control" id="inputStep" placeholder="3D">
											<label for="inputStep" class="input-group-text px-3">3D</label>
										</div>
									</div>
								</div>
							</div>
							<div class="col-12 mt-4">
								<button type='submit' class='btn btn-success'>Valider le nouveau PRG</button>
							</div>
							{{ form_end(form) }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="liste cadre">
	<div>
		{% if list %}
			<h1>Les 10 derniers programmes ....</h1>
		{% endif %}
	</div>
</div>{% endblock %}{% block script %}
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="{{asset('js/progmeca.js')}}"></script>{% endblock %}
