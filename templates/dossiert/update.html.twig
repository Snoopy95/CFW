{% extends 'base.html.twig' %}

{% block title %}
<h1 class='col-10'>
	Edition Dossier
</h1>
{% endblock %}

{% block body %}
	<div class="menu cadre">
		<div class="card card-body">
			{{ form_start(form) }}
			<div class="form-row">
				<div class="form-group col-1">
					{{form_row(form.numdossier)}}
					<small class="invalid-feedback">{{form_errors(form.numdossier)}}</small>
				</div>
				<div class="form-group col-2">
					{{form_row(form.client)}}
				</div>
				<div class="form-group col-4">
					{{form_row(form.refpiece)}}
				</div>
				<div class="form-group col-1">
					{{form_row(form.ind)}}
				</div>
				<div class="form-group col-4">
					{{form_row(form.desigpiece)}}
				</div>
			</div>
			<div class="form-row">
				<div class="form-group col-3">
					{{form_row(form.plan)}}
				</div>
			</div>
				<button type="submit" class="mt-3 btn btn-success">Valider !</button>
				<a href="{{ path('dossiert') }}" type="button" class="mt-3 ml-4 btn btn-danger">Annuler</a>
			{{ form_end(form)}}
		</div>
	</div>
{% endblock %}
